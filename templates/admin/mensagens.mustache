{{&bar}}
<div class="container">
  <table class="table table-striped table-dark table-hover">
    <thead>
      <tr>
        <th scope="col">Vista</th>
        <th scope="col">Nome</th>
        <th scope="col">Email</th>
        <th scope="col">Detalhes</th>
      </tr>
    </thead>
    <tbody>
      {{#mensagens}}
      <tr>
        <td>{{&vista}}</td>
        <td>{{ nome }}</td>
        <td>{{ email }}</td>
        <td><a class="table-link" href="{{ detalhes_uri }}">Detalhes</a></td>
      </tr>
      {{/mensagens}}
    </tbody>
  </table>
  <div class="paginacao">
    {{&pagination}}
  </div>
</div>
