<div class="container">
  {{&alert}}
  <form id="detailForm" action="{{ action_uri }}" method="POST">
    <div class="form-group">
      <label for="inputData">Data</label>
      <input
        type="date"
        class="form-control"
        id="inputData"
        placeholder="Data..."
        value="{{ data_value }}"
        name="data"
      />
    </div>
    <div class="form-check">
      <input
        type="checkbox"
        class="form-check-input"
        id="checkEstado"
        name="estado"
      />
      <label class="form-check-label" for="checkEstado">Terminada</label>
    </div>
    {{&receita_form_include}}
    {{&modals_include}}
    {{&form_footer_include}}
    <!-- Inputs com informação JSON sobre produtos e enfermeiros. -->
    <input id="produtos-info" type="hidden" value="{{ produtos_json }}"/>
    <input id="enfermeiros-info" type="hidden" value="{{ enfermeiros_json }}"/>
    <input id="produtos-tosend" type="hidden" value="[]" name="produtos"/>
    <input id="enfermeiros-tosend" type="hidden" value="[]" name="enfermeiros"/>
  </form>
</div>
